<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@user) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :discipline %>
  <%= f.text_field :discipline %>

  <%= f.label :artist_statement %>
  <%= f.text_field :artist_statement %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :contact_info %>
  <%= f.text_field :contact_info %>

  <%= f.label :instagram %>
  <%= f.text_field :instagram %>

  <%= f.label :facebook %>
  <%= f.text_field :facebook %>

  <%= f.label :twitter %>
  <%= f.text_field :twitter %>

  <%= f.label :website %>
  <%= f.text_field :website %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.file_field :avatar %>

  <%= f.submit %>

<% end %>
