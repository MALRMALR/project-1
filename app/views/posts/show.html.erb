<h2><%= @post.title %></h2>
<small><%= @post.date %></small><br>
<%= @post.article %><br>
<%= @post.user.first_name%> <%= @post.user.last_name %><br><br>
<%= image_tag @post.attachment.url(:medium)%><br>
<%= render partial: 'embed', locals: { post: @post } %>
<p>
<%= link_to 'Back to Posts', posts_path %> |
<% if session[:current_user] == @post.user.id %>
<%= link_to 'Edit Post', edit_post_path%> |
<%= link_to 'Delete Post', post_path, method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
</p>
<% unless @post.comments == nil %>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.author %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>





<% end %>
<% if session[:current_user] == @post.user.id %>
<h3>Add a comment:</h3>
<%= render "comments/form" %>
<% end %>
